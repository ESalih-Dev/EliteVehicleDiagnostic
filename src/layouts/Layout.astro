---
import { Separator } from '@/components/ui/separator'
import { Mail, Phone } from 'lucide-react'
import { ToolbarMaps } from '@/components/home/toolbarMaps'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Elite Vehicle Diagnostic " />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col">
    <div
      class="flex flex-col md:flex-row justify-between py-4 px-10 bg-slate-200 text-slate-800 items-center">
      <a href="/" class="text-4xl font-extralight mb-4 md:mb-0">Elite Vehicle Diagnostic</a>
      <div class="flex flex-row">
        <Separator orientation="vertical" className="h-auto mx-4 lg:mx-8" />
        <a href="/contact" class="flex flex-row sm:w-[180px] py-3 items-center justify-center">
          <Mail className="h-8 w-8 sm:mr-3" />
          <span class="font-mono font-semibold hidden sm:block">Contact form</span>
        </a>
        <Separator orientation="vertical" className="h-auto mx-4 lg:mx-8" />
        <a
          href="tel:02081500022"
          class="flex flex-row sm:w-[180px] py-3 items-center justify-center">
          <Phone className="h-8 w-8 sm:mr-3" />
          <span class="font-mono font-bold hidden sm:block">020 8150 0022</span>
        </a>
        <Separator orientation="vertical" className="h-auto mx-4 lg:mx-8" />
        <ToolbarMaps client:load />
        <Separator orientation="vertical" className="h-auto mx-4 lg:mx-8" />
      </div>
    </div>
    <slot />
  </body>
</html>
